

<h1>Staffs</h1>



<table class='table table-condensed'>

        
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>F name</th>
      <th>Designation</th>
      <th>Age</th>
      <th>Sallary</th>
      <th>Cell</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.image %></td>
        <td><%= staff.name %></td>
        <td><%= staff.f_name %></td>
        <td><%= staff.designation %></td>
        <td><%= staff.age %></td>
        <td><%= staff.sallary %></td>
        <td><%= staff.cell %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

